.SUFFIXES = .c.o

INC = libft.h

CC = gcc
CFLAGS = -Wall -Wextra -Werror
NAME = libft.a

SRCS = $(wildcard *.c)

OBJS = $(SRCS:.c=.o)

all : $(NAME)

$(NAME) : $(OBJS)
	ar rcv $@ $(OBJS)
	ranlib $@
.c.o : $(SRC) $(INC)
	$(CC) $(CFLAGS) -c $< -o $@
clean :
	rm -f $(OBJS)
fclean : clean
	rm -f $(NAME)
re : fclean all
